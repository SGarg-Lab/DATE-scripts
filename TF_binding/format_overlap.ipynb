    "#create simple jaccards for allpaired, datepaired\n",
    "import xlsxwriter\n",
    "def jaccard(filename, singledicty, doubledicty, length):\n",
    "    # filename: string for desired excel output name. remember to append '.xlsx' at the end\n",
    "    # singledicty: dictionary mapping each TF to its number of peaks (optionally at a subset)\n",
    "    # doubledicty: dictionary mapping a TF pair to its shared number of peaks (optionally at a subset)\n",
    "    # lengths: dictionary mapping each TF to its total number of peaks (not subsetted)\n",
    "    wb = xlsxwriter.Workbook(filename)\n",
    "    sheet = wb.add_worksheet()\n",
    "    rcounter = 1\n",
    "    ccounter = 0\n",
    "    for tf1 in length:\n",
    "        sheet.write(0, ccounter, tf1)\n",
    "        for tf2 in length:\n",
    "            numer = doubledicty[tf1][tf2]\n",
    "            denom = singledicty[tf1]+singledicty[tf2]-numer\n",
    "            try:\n",
    "                val = numer/denom\n",
    "            except:\n",
    "                val = 1\n",
    "            sheet.write(rcounter, ccounter, val)\n",
    "            rcounter+=1\n",
    "        rcounter = 1\n",
    "        ccounter+=1\n",
    "    wb.close()\n",
    "    \n",
    "jaccard('heatmap_all.xlsx', lengths, allpaired, lengths)\n",
    "jaccard('heatmap_dates.xlsx', datetf, datepaired, lengths)"
   ]
  }
